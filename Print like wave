/*
Given a 2D array print it like a wave
*/
#include <bits/stdc++.h> 
vector<int> wavePrint(vector<vector<int>> arr, int nRows, int mCols)
{
    //Write your code here
    int i,j;
    vector<int> ans;
    for(i=0;i<mCols;i++)
    {
        if(i%2 == 0)
        {
            for(j=0;j<nRows;j++)
            {
                ans.push_back(arr[j][i]);
            }
        }
        else
        {
            for(j=nRows-1;j>=0;j--)
            {
                ans.push_back(arr[j][i]);
            }
        }
    }
    return ans;

}
